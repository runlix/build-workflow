{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "pinDigests": true,
      "automerge": false,
      "schedule": ["before 4am on Monday"],
      "commitMessageTopic": "{{depName}} GitHub Action"
    }
  ]
}
